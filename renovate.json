{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["*"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "rebaseWhen": "auto"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "rebaseWhen": "auto"
    }
  ],
  "platformAutomerge": true,
  "automergeType": "branch",
  "ignoreTests": true,
  "rebaseWhen": "auto"
}
